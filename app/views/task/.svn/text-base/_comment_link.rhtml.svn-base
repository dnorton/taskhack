<% @task = comment_link %>
<%= link_to_remote "notes (#{@task.comments.size})",
              :update => "sidebar",
              :url => {
              :controller => 'task',
              :action => 'comments',
              :id => @task },
	      :loading => "Element.show('sidebar')",
              :complete => visual_effect(:highlight, 'sidebar') %>