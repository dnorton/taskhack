html {
  font-size:   small;	
}

body {  
       color: #333;
       margin: 0;	
       padding: 0; 
	   font-size:95%;
}

body, p, ol, ul, td {
  font-family: Tahoma, verdana, helvetica, sans-serif;
  line-height: 1.3em;
}

.task_name {
	margin: 2px;
	padding: 2px;
}

.highlight {
	border: 2px solid #949492;
	background-color: #FFF;
	padding: 0;
}

ul {
	list-style: none;
}


#container {
  background-color:#fff;
}


#main {
   margin-right:484px;
   margin-left: 20px;
   padding-top: 20px;
   padding-bottom:20px;
   float:left;
}

#sidebar {
	width: 460px;
	margin-left:-484px;
    float:right;
    border:none;
	margin-right: 20px;
	margin-top: 20px;
   	margin-bottom:20px;
}

#header {
	font-family: arial,verdana, helvetica, sans-serif;  
	background-color: #D3D6AA;
	border-bottom: 2px solid #000;
	width:100%;
	position:relative;
	top:0;
}

#footer {
   clear:both;
   width:100%;
   text-align:center;
   border-top:2px solid #DDD;
   background-color: #eee;
}

pre {
  background-color: #eee;
  padding: 10px;
  font-size: 11px;
}

h2 { 
    padding-top:10px;
    display:inline;
    font-size:  2em;
    line-height:2.1em;
}

#col_head_check_box, #col_head_check_done {
	text-indent:  -999px;
}

a:link,a:visited { color: #000; }
a:hover { color: #fff; background-color:#000; }

a img {
	padding-left: 4px;
	border:none;	
}

a:hover img {
	color: #FFFFCC;
	background:transparent;
	background-color: #FFFFCC;
}

.fieldWithErrors {
  padding: 2px;
  background-color: red;
  display: table;
}

active_tasks_table {}

.task_table {
	border-collapse:  collapse;
	width:  100%;
	border:  1px solid #666;
}

.task_table td {
	padding:  0.1em 1em;
	border: 1px solid #aaa;
}

.td_task_title {
	width:  100%;
}

.edit_table {
	border-collapse: collapse;
	border: none;
	padding: 0;
	margin: 0;
}

.edit_table tr, .edit_table td {
	border:none;
	padding: 0;
	margin: 0;
}




#project_list {
	width:100%;
}

.task_table th {
	padding:  0.1em 1em;
	border:  1px solid #aaa;
	font-weight:  normal;
	text-align: left;
        background-color: #cccccc;
}

.task_table caption {
	font-size:  1em;
	font-weight:  bold;
	margin:  1em 0;
	padding:  1px 0;
	background-color: #eee;
	border: 2px solid #ddd;
}

#task_list, ul#task_list  {
  list-style-type:none;
  padding:0;
  margin-left:0;
  margin-top:0;
  border:1px solid;
  border-bottom:none;
  
}

.task_title {
    text-align:center;
    height: 12px;
    margin-left:-3px;
    background-color: #ABABAB;
}

div.task_title:hover {
    cursor:move;
    background-color: #666666;
}

#completed_list  {
	font-size:1em;
	color:#616365;
	padding-left:0;
	margin:0;
	padding-right:25px;
	
}

#completed_list .task_title{
    display:none;
}

.completed_task_details {
	font-size:85%;
	font-weight:bold;
	padding-left:20px;
	padding-top:5px;
	color:#4E4E6E;
	line-height:15px;
}

.task_details {
	font-size:75%;
	font-weight:bold;
	color:#4E4E6E;
	line-height:15px;
	padding-top:5px;
	margin-left:-3px;
}


.task_details a:link, .task_details a:visited { color: #4E4E6E; }
.task_details a:hover { color: #fff; background-color:#000; }
.completed_task_details a:link, .completed_task_details a:visited { color: #4E4E6E; }
.completed_task_details a:hover { color: #fff; background-color:#000; }

.task_element {
	margin-right:7px;
	padding-right:7px;
	border-right:2px solid #4E4E6E;
}

.more_arrow {
	padding-left: 15px;
}

#completed_tasks li {
	list-style-type:none;
	border:0;
}

.running {
	font-weight:bold;
	color:#527811;
}

.running_time {
    background-color:#ffc;
    text-align:center;
    padding:3px;
    border: 2px solid;
    font-size:85%;
    width:70px;
}



#new_task {
	background-color:#333366;
	width: 65%;
	padding-left:10px;
	margin-top: 15px;
	padding-bottom: 5px;
	padding-top:5px;
	color:#fff;
}

#new_task a {
    color:#fff;
}

#comments {
	border: 1px solid #a3a3a3;
	padding: 6px;
}

.comment_list  {
    list-style:none;
    margin:0;
    padding:0;
}

.comment_list li {
	border-top: 1px dotted #a3a3a3;
}

.comment_heading, .comment_heading a, div.comment_heading a:link, div.comment_heading a:visited {
	color: #4E4E6E;
    padding-left: 4px;
    padding-right: 4px;
    margin-right: 4px;
}

div.comment_heading a:hover { color: #fff; background-color:#000; }

#comment_comment {
	height: 300px;
	width: 98%;
	border: 1px solid #8587C2;
	font-family: Verdana;
	font-size: 101%;

}

#comment_comment:focus {
	border: 2px solid #5A5DC4;
}


#details {
	padding: 6px;
}

.commands {
	font-size:75%;
	font-weight:bold;
	padding-left:10px;
	color:#4E4E6E;
	line-height:15px;
	padding-top:5px;
}

.commands a:link, .task_details a:visited { color: #4E4E6E; }
.commands a:hover { color: #fff; background-color:#000; }


.command {
	margin-right:7px;
	padding-right:7px;
	border-right:2px solid #4E4E6E;
	
}

input.date_text {
    width: 120px;
    margin-right:3px;
}

/* Tab CSS TODO: update this */
#inner_status {
	background-color: #FFEB54;
	border:  1px solid #5C5C5C;
	text-decoration: none;
	font-weight: bold;
	padding-left: 20px;
	padding-top:2px;
	padding-bottom:2px;
	margin-left:25%;
	margin-top:8px;
	width: 15%;
	float:left;
}

/* Tab CSS TODO: update this */
#inner_action_status {
	background-color: #99FF80;
	border:  1px solid #5C5C5C;
	text-decoration: none;
	font-weight: bold;
	width:  200px;
	margin: 0 auto;
	padding: 1px 3px;
}

/* navigation tabs */
#tabs {
	float:left;
	margin-bottom:0px;
}

.tab {	
    float: left;
	display: inline;
	position: relative;
	color: #333;
	margin-left: 3px;
	
}

.tab_hover {
    float: left;
	display: inline;
	position: relative;
	color: #333;
	margin-left: 3px;
}


.tab a, .tab a:visited {
	color: #333;
	padding:  6px 8px;
	border: 1px solid #9b8748;
	border-bottom: none;
	background: #F9E9A9;
	display: block;
	text-decoration:none;
}

.tab a:hover {
	background-color:  #fff;
	color: #333;
}
/* hacky */
.tab_hover a, .tab_hover a:visited {
	color: #333;
	padding:  6px 8px;
	border: 1px solid #9b8748;
	border-bottom: none;
	background: #FFF;
	display: block;
	text-decoration:none;
}

.tab_hover a:hover {
	background-color:  #fff;
	color: #333;
}


.drop_down {
	background-color: #eee;
	border: 1px solid #CBCCC9;
	display: none;	
	position: absolute;
	float:left;
	top: 0;
	left: -999px;
	padding-left:0;
}

.drop_down a, .drop_down a:visited {
	padding-left: 4px;
	padding-right: 2px;
	margin:0;
	background: #eee;
	color: #000;
	border:0;
	
}

.drop_down a:hover {
	border: 2px solid #000;
	padding: 0;
	background: #474CD6;
	color: #fff;
	
}

.drop_down_over {
	background-color: #eee;
	border: 1px solid #CBCCC9;
	display: block;	
	position: absolute;
	float:left;
	top: 25px;
	left: 0;
	padding:0;
}

.drop_down_over a, .drop_down_over a:visited {
	margin:0;
	background: #eee;
	color: #000;
	border:0;
	padding:0;
	padding-left:4px;
	padding-right:4px;	
}

.drop_down_over a:hover {
	border-top: 2px solid #000;
	background: #474CD6;
	color: #fff;
	margin:0;
	
}

